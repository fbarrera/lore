rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /stories/{storyId} {
      allow read, write: if request.auth != null && (request.resource == null || request.resource.data.userId == request.auth.uid);
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      match /segments/{segmentId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/stories/$(storyId)).data.userId == request.auth.uid;
        // Write is handled by Cloud Function, but we might need it for local testing or specific cases.
        // For now, let's allow read if the parent story belongs to the user.
      }
    }
    match /characters/{characterId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
